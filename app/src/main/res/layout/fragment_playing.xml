<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayingFragment">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:src="@tools:sample/backgrounds/scenic[9]"
            android:id="@+id/playing_album_art"
            android:scaleType="fitCenter" android:adjustViewBounds="true" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" android:layout_marginBottom="16dp"/>

    <TextView
            android:id="@+id/playing_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Afraid To Shoot Strangers"
            style="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/playing_album_art" android:layout_marginTop="16dp"
            android:textAlignment="center"/>

    <TextView
            android:id="@+id/playing_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Iron Maiden"
            style="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/playing_title"
            android:layout_marginTop="8dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playing_play_pause_btn"
            android:background="@drawable/ic_pause_white"
            app:layout_constraintTop_toBottomOf="@+id/playing_artist" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playing_skip_btn"
            app:layout_constraintTop_toBottomOf="@+id/playing_artist" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/playing_play_pause_btn"
            app:layout_constraintHorizontal_bias="0.3" android:background="@drawable/ic_skip_next_white"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playing_previous_btn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playing_artist" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/playing_play_pause_btn"
            app:layout_constraintHorizontal_bias="0.7" android:background="@drawable/ic_skip_previous_white"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.6005472"/>

</androidx.constraintlayout.widget.ConstraintLayout>